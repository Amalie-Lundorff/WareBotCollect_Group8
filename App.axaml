<!-- App.axaml is the first to open and run before any windows appear. -->
<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SystemLogin.App"
             RequestedThemeVariant="Default">

<!-- It defines the styles and the theme like light/dark. Anything applies to all windows and controls. --> 
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

</Application>
