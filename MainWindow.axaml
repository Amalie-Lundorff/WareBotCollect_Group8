<!-- MainWindow.axaml
FormÃ¥l:
- Definerer hovedvinduet og brugergrÃ¦nsefladen for hele systemet
- Samler login, administration, databasevisning og ordreoprettelse
-->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        x:Class="Login.MainWindow"
        mc:Ignorable="d"
        d:DesignWidth="1000"
        d:DesignHeight="700"
        d:DataContext="{d:DesignInstance Type=local:MainWindow, IsDesignTimeCreatable=True}"
        x:CompileBindings="False"
        Title="SystemLogin">
    
    <!-- STYLES -->
    <!-- Sikrer ensartet layout i hele applikationen, undgÃ¥r gentagelser -->

    <Window.Styles>
        <Style Selector="TextBox, Button, CheckBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style Selector="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Styles>

    <!--
MAIN LAYOUT
Grid opdeler vinduet i:
- Ã˜verste del: Tabs med systemfunktioner
- Midterste del: Log-output
- Nederste del: Kontrolknapper (logout, clear log)
-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TABS -->
        <!-- FormÃ¥l:
- Opdeler systemet i funktionelle omrÃ¥der
- Hver fane reprÃ¦senterer et modul i systemet
-->
        <TabControl Grid.Row="0" Name="MainTabControl">

            <!-- LOGIN -->
            <!-- FormÃ¥l:
- Login af eksisterende brugere
- Oprettelse af nye brugere
- Tildeling af admin-rettigheder
-->

            <TabItem Header="ðŸ”‘ Login">
                <StackPanel Margin="20" Spacing="20">
                    <TextBlock Text="Login" FontWeight="Bold" FontSize="16"/>
                    <TextBox Name="LoginUsername" Watermark="Username"/>
                    <TextBox Name="LoginPassword" Watermark="Password" PasswordChar="â—"/>
                    <Button Content="Login" Width="160" Click="LoginButton_OnClick"/>

                    <Separator/>

                    <TextBlock Text="Create user" FontWeight="Bold" FontSize="16"/>
                    <TextBox Name="CreateUserUsername" Watermark="Username"/>
                    <TextBox Name="CreateUserPassword" Watermark="Password" PasswordChar="â—"/>
                    
                    <!-- Create user section: Opretter nye brugere i systemet. Checkbox bruges til at tildele admin-rettigheder-->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Is admin"/>
                        <CheckBox Name="CreateUserIsAdmin"/>
                    </StackPanel>

                    <Button Content="Create user âœ…"
                            Width="180"
                            Click="CreateUserButton_OnClick"/>
                </StackPanel>
            </TabItem>

            <!-- ADMIN -->
            <!-- FormÃ¥l: Giver administrator overblik over tidligere ordrer + muliggÃ¸r oprettelse af nye ordrer -->

            <!-- Overskrift -->
            <TabItem Header="ðŸ¦¾ Admin">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Opretter grid til kolonneoverskrift -->
                    <TextBlock Text="Previous orders"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,16"/>

                    <!-- Definerer 3 kolonner i grid'et -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/> <!-- Order ID -->
                            <ColumnDefinition Width="150"/> <!-- Date -->
                            <ColumnDefinition Width="100"/> <!-- Quantity -->
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Order ID" FontWeight="Bold"/>
                        <TextBlock Text="Date" Grid.Column="1" FontWeight="Bold"/>
                        <TextBlock Text="Quantity" Grid.Column="2" FontWeight="Bold"/>
                    </Grid>

                    <ItemsControl Grid.Row="2" ItemsSource="{Binding PreviousOrders}"> <!-- dynamisk liste af elementer, henter data fra ViewModel -->
                        <ItemsControl.ItemTemplate> <!-- Definerer hvordan Ã©t element i listen vises, genbruges for hver ordre -->
                            <DataTemplate> <!-- skabelon, layout for hvert dataobjekt -->
                                <Grid> 
                                    <Grid.ColumnDefinitions> <!-- Definerer layout for hver ordre-rÃ¦kke -->
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding OrderId}"/> <!-- Binder tekstfeldt til OrderId, viser dens unikke ID -->
                                    <TextBlock Text="{Binding CreatedAt}" Grid.Column="1"/> <!-- Binding createdAt, viser oprettelsesdato. Grid.column placerer tekst i kolonne -->
                                    <TextBlock Text="{Binding TotalQuantity}" Grid.Column="2"/> <!-- Viser samlet antal komponenter i ordren -->
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Grid.Row="3"
                            Content="Place new order"
                            Width="240"
                            Height="56"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0"
                            Click="OnPlaceOrderClick"/> <!-- Click = event. OnPlaceOrderClick kaldes -->
                </Grid>
            </TabItem>

<!-- DATABASE -->
            <!-- FormÃ¥l:
- Viser den aktive ordre, som ligger i databasen
- Bruges som kontrolpunkt fÃ¸r ordren behandles videre
-->

<TabItem Header="ðŸ›¢ Database">
    <DockPanel Margin="20">

        <!-- CONFIRM BUTTON -->
        <!--Confirm order completed: Manuel bekrÃ¦ftelse af at ordren er fÃ¦rdigbehandlet -->

        <Button Content="Confirm order completed"
                DockPanel.Dock="Bottom"
                HorizontalAlignment="Right"
                Margin="0,20,0,0"
                Width="200"
                Height="32"
                Background="Green"
                Foreground="White"
                Command="{Binding DataContext.ConfirmOrderCommand, 
                  RelativeSource={RelativeSource AncestorType=Window}}"/>
        <!-- NÃ¥r knappen trykkes, kaldes ConfirmOrderCommand som ligger i hovedvinduets kode -->


        <!-- MAIN GRID -->
        <!-- Opdeler database-visningen i:Overskrift, kolonneoverskrifter ordredata -->

        <!-- RÃ¦kker i grid -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Kolonner i grid -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- ORDER HEADER -->
            <!-- Viser hvilken ordre der arbejdes med -->
            <TextBox Grid.Row="0"
                     Grid.ColumnSpan="2"
                     Text="Order"
                     FontSize="17"
                     TextAlignment="Center"
                     Background="#FF120F75"
                     Foreground="White"
                     Height="32"
                     Width="350"
                     HorizontalAlignment="Center"
                     Margin="0,10"/>

            <!-- COLUMN HEADERS -->
            <TextBox Grid.Row="1"
                     Grid.Column="0"
                     Text="Quantity"
                     TextAlignment="Center"
                     FontWeight="Bold"
                     Foreground="#FF04006B"
                     Height="32"
                     Margin="0,5"/>

            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Text="Component"
                     TextAlignment="Center"
                     FontWeight="Bold"
                     Foreground="#FF04006B"
                     Height="32"
                     Margin="0,5"/>

            <!-- DATABASE DATA -->
            <!-- Viser ordrelinjer dynamsik fra databasen-->
            <ItemsControl Grid.Row="2"
                          Grid.ColumnSpan="2"
                          ItemsSource="{Binding DatabaseOrderLines}">
                <ItemsControl.ItemTemplate>
                    <!-- DataTemplate: Definerer hvordan Ã©n ordrelinje vises -->
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Viser antal af komponenten -->
                            <TextBlock Grid.Column="0"
                                       Text="{Binding Quantity}"
                                       TextAlignment="Center"
                                       FontSize="14"
                                       Height="24"/>
                            
                            <!-- Viser navn pÃ¥ komponenten -->
                            <TextBlock Grid.Column="1"
                                       Text="{Binding ProductName}"
                                       TextAlignment="Center"
                                       FontSize="14"
                                       Height="24"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <!-- Process order: Starter behandling af ordren (robot) -->
            <Button Grid.Row="3"
                    Grid.Column="0"
                    Content="Process order"
                    Width="140"
                    Height="32"
                    Background="#1E60FF"
                    Foreground="White"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Left"
                    Command="{Binding DataContext.ProcessOrderCommand,
                          RelativeSource={RelativeSource AncestorType=Window}}"/>
            <!-- Starter behandling af ordren via ProcessOrderCommand -->
            
        </Grid>
    </DockPanel>
</TabItem>


                                 <!-- CREATE ORDER -->
            <!-- Her opretter brugeren en ny ordre ved at vÃ¦lge produkter og mÃ¦ngder -->
            <!-- Layout for Create Order:
- Venstre side: brugerinfo
- HÃ¸jre side: produkter
- Nederst: aktuel ordre og handlinger -->

            <TabItem Header="ðŸ“ Create Order">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- USER INFO -->
                    <!-- Viser hvem der er logget ind -->

                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock Text="Your information"
                                   FontWeight="Bold"
                                   FontSize="16"/>
                        <!-- Vises kun hvis brugeren er logget ind -->
                        <StackPanel IsVisible="{Binding IsLoggedIn}">
                            <TextBlock Text="Admin ID #"/>
                            <!-- Viser brugerens ID -->
                            <TextBlock Text="{Binding CurrentUserId}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- PRODUCTS -->
                    <StackPanel Grid.Row="0" Grid.Column="1">
                        <TextBlock Text="Products"
                                   FontWeight="Bold"
                                   FontSize="16"/>
                        <ItemsControl ItemsSource="{Binding AvailableProducts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- SÃ¦nker antal -->
                                        <Button Content="â–¼"
                                                Command="{Binding DataContext.DecreaseQtyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>

                                        <!-- Ã˜ger antal -->
                                        <Button Content="â–²"
                                                Grid.Column="1"
                                                Command="{Binding DataContext.IncreaseQtyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>

                                        <!-- Viser valgt antal -->
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Quantity}"
                                                   HorizontalAlignment="Center"/>

                                        <!-- Viser produktets navn -->
                                        <TextBlock Grid.Column="3"
                                                   Text="{Binding Name}"/>

                                        <!-- TilfÃ¸jer produktet til ordren -->
                                        <Button Grid.Column="4"
                                                Content="Add to order ðŸ›’"
                                                Command="{Binding DataContext.AddToOrderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- ORDER LINES -->
                    <!-- Viser den ordre, som er ved at blive opbygget -->
                    <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
                        <TextBlock Text="Order"
                                   FontWeight="Bold"
                                   FontSize="16"/>
                        
                        <!--ItemsControl: Viser ordrelinjer dynamisk og binder til OrderLines i ViewModel -->
                        <ItemsControl ItemsSource="{Binding OrderLines}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Fjerner produkt fra ordren -->
                                        <Button Content="Delete âŒ"
                                                Command="{Binding DataContext.RemoveFromOrderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                       
                                        <!-- Viser antal i ordren -->
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Quantity}"
                                                   HorizontalAlignment="Center"/>

                                        <!-- Viser produktnavn i ordren -->
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Name}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- PLACE ORDER -->
                    <!-- Afsender ordren til systemet -->
                    <Button Grid.Row="3"
                            Grid.Column="1"
                            Content="Place order âœ…"
                            Width="180"
                            Height="40"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0"
                            Command="{Binding DataContext.PlaceOrderCommand, RelativeSource={RelativeSource AncestorType=Window}}" />

                    <!-- Vises hvis brugeren ikke er logget ind -->
                    <TextBlock Grid.Row="4"
                               Grid.Column="1"
                               Foreground="Red"
                               FontWeight="Bold"
                               Text="You must be logged in to place an order"
                               IsVisible="{Binding IsLoggedOut}"
                               HorizontalAlignment="Right"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- LOG -->
        <!-- Viser systemets hÃ¦ndelser og statusbeskeder -->
        
        <!-- Border: Indrammer log-omrÃ¥det visuelt -->
        <Border Grid.Row="1"
                BorderBrush="Black"
                BorderThickness="0,1,0,1"
                Background="DimGray"
                Padding="10">
           
            <!--ScrollViewer: GÃ¸r det muligt at scrolle i loggen -->
            <ScrollViewer>
                <!-- LogOutput: Viser tekst fra systemet (log) bruges for bedre lÃ¦sbarhed -->
                <TextBlock Name="LogOutput"
                           FontFamily="Consolas"
                           TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- BOTTOM -->
        <!-- BOTTOM CONTROLS:Knapper til log- og sessionstyring -->

        <!-- DockPanel: Placerer knapper i hver sin side -->
        <DockPanel Grid.Row="2" Margin="8">
            
            <!-- Clear log: Rydder indholdet i loggen -->
            <Button Content="Clear log"
                    DockPanel.Dock="Left"
                    Click="ClearLogButton_OnClick"/>
            
            <!-- Logout: Logger brugeren ud af systemet Vises kun nÃ¥r brugeren er logget ind -->
            <Button Content="Logout"
                    DockPanel.Dock="Right"
                    Name="LogoutButton"
                    IsVisible="False"
                    Click="LogoutButton_OnClick"/>
        </DockPanel>
    </Grid>
</Window>
